<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Section1/moo.css")" rel="stylesheet" type="text/css" />
    <link runat="server" rel="shortcut icon" href="@Url.Content("~/Content/favicon.ico")" type="image/x-icon" />
    <link runat="server" rel="icon" href="@Url.Content("~/Content/favicon.ico")" type="image/ico" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <!--Centered division.-->
	<div align="center">
		<!--Table to place all subsections-->
		<table width="100%" cellpadding="0px" cellspacing="0px" border="0" align="center">
			<tbody>
				<!--Top Row-->
				<tr>
					<!--Center Sub Section-->
					<td class="td-header" colspan="3" alt="" valign="top">
						<p align="center">
							<!--Primary Header: Main Splash / Logo-->
							<img src="@Url.Content("~/Pictures/logo_HouseThatKamuraiBuilt_blueonblack.jpg")" width="100%" alt="" border="0" align="center" vspace="0" hspace="0"><br>
						</p>
					</td>
				</tr>
				<!--2nd Row-->
				<tr>
					<!--NavBar-->
					<td class="td-navbar" colspan="3" alt="">
						<div>
							<ul id="list-nav">
								<li>
                                    <li>@Html.ActionLink("Home", "Index", "Main")</li>
									<li>@Html.ActionLink("Web Programming", "Index", "Section1")</li>
									<li>@Html.ActionLink("Private Projects", "Index", "Section2")</li>
									<li>@Html.ActionLink("Downloadable Projects", "Index", "Section3")</li>
								</li>
							</ul>
					   </div>
					</td>
				</tr>				
				<!--3rd Row-->
				<tr>
					<!--Left Sub Section-->
					<td class="td-left" valign="top">
						<div align="center">
							<div class="left-box">
								<div class="navlinks">
									<h4>
										Navigation
									</h4>
									<span class='navlink'>
	                                    @Html.ActionLink("Basic HTML", "Project1HTML", "Section1")
                                    </span>
                                    </br>
                                    <span class="navlink">
										@Html.ActionLink("PHP", "Project1PHP", "Section1")
									</span>
									<br>
									<span class="navlink">
                                        @Html.ActionLink("Javascript", "Index", "Section1_2")
									    <h5>
											<span class="navlink">
                                                @Html.ActionLink("HTML Javascript", "Project1", "Section1_2")
											</span>
											<span class="navlink">
                                                @Html.ActionLink("ASP Javascript", "Project2", "Section1_2")
											</span>
											<span class="navlink">
                                                @Html.ActionLink("ASP.NET Javascript", "Project3", "Section1_2")
											</span>
										</h5>
									</span>
									<br>
									<span class="navlink">
                                        @Html.ActionLink("Perl", "Project3", "Section1")
									</span>
									<br>
									<span class="navlink">
                                        @Html.ActionLink("Xhtml", "Project4", "Section1")
									</span>
									<br>
									<span class="navlink">
                                        @Html.ActionLink("ASP.Net", "Index", "Section1_5")
									</span>
									<br>
                                    <span class="navlink">
                                        @Html.ActionLink("Databases", "Index", "Section1_6")
                                    </span>
									<br>	
								</div>
							</div>
						</div>
					</td>
					<!--Center Sub Section-->
					<td class="td-content">
						<div align="center">
							<div class="content-box">
								<div>
                                    @RenderBody()
								</div>
								<br>
								<br>
							</div>
						</div>
					</td>
					<!--Right Sub Section-->
					<td class="td-right" valign="top">
						<div align="center">
							<div class="right-box">
								<h4>
									Information
								</h4>
							</div>
						</div>
					</td>
				</tr>
				<!--4th Row-->
				<tr>
					<!--Center Sub Section-->
					<td class="td-footer" colspan="3">
						<div align="center">
							<div class="footer-box">
								<p align="center">
									© Copyright 2012 All rights reserved<br>
									House That Kamurai Built<br>
								</p>
								<p align="left">
									<font size="1">
									Website managed by Kamurai.
									</font>
								</p>
							</div>
						</div>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</body>
</html>
