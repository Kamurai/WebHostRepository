<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Main.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body id="idBody">
    <table id="idTableMain">
        <tr id="idHeaderRow">
            <td id="idHeaderRowCenter" colspan="3">
                <img src="@Url.Content("~/Pictures/logo_HouseThatKamuraiBuilt_blueonblack.jpg")"><br>
                </p>
            </td>
        </tr>
        <tr id="idNavigationRow">
            <td id="idNavigationBar" colspan="3">
                @Html.ActionLink("Home", "Index", "Main")
                @Html.ActionLink("Web Programming", "Index", "Section1")
                @Html.ActionLink("Private Projects", "Index", "Section2")
                @Html.ActionLink("Downloadable Projects", "Index", "Section3")
            </td>
        </tr>
        <tr id="idCenterRow">
            <td id="idCenterRowLeft">
                <h4>
                    Navigation
                </h4>
                @Html.ActionLink("About Us", "AboutUs", "Main")<br/><br/>
                @Html.ActionLink("HTKB Affiliations", "Affiliation", "Main")<br /><br />
                @Html.ActionLink("Minecraft!", "Minecraft", "Main")<br /><br />
