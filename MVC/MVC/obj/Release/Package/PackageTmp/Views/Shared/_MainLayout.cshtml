            <td id="idCenterRowMain">
                @RenderBody()
            </td>
            <td id="idCenterRowRight">
                <h4>
                    Information
                </h4>
                This is written with ASP.NET as a MVC Application.<br /><br />
                Other verisons can be found here:<br />
                @Html.Raw(@Page.Versions)
            </td>
        </tr>
        <tr id="idFooterRow">
            <td id="idFooterMain" colspan="3">
                <p id="idFooterContent">
                    © Copyright 2012 All rights reserved<br>
                    House That Kamurai Built<br>
                </p>
                <p id="idFooterManagement">
                    Website managed by Kamurai.
                 </p>
            </td>
        </tr>
    </table>
</body>
</html>
