@{
    Layout = "~/Layouts/Section1/Section6/_Layout.cshtml";
    Page.Title = "MySQL Programming";

    var db = Database.Open("MySQLConnectionString");
    var selectQueryString = "SELECT * FROM test";

}

<p align="left">
	This section is dedicated to MySQL based programming.
</p>

<table> 
    <tr>
        <td>
            MySQL Instance  
        </td>
        <td></td>
    </tr>
    <tr>
        <th>Index</th> 
        <th>Color</th> 
    </tr>
    @foreach(var row in db.Query(selectQueryString))
    {
        <tr> 
            <td>@row.index</td> 
            <td>@row.Color</td> 
        </tr> 
    }
</table>